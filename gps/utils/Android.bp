cc_library_shared {
    name: "libgps.utils",
    vendor: true,
    sdclang: true,
    srcs: [
        "loc_log.cpp",
        "loc_cfg.cpp",
        "msg_q.c",
        "linked_list.c",
        "loc_target.cpp",
        "LocHeap.cpp",
        "LocTimer.cpp",
        "LocThread.cpp",
        "MsgTask.cpp",
        "loc_misc_utils.cpp",
        "loc_nmea.cpp",
        "LocIpc.cpp",
    ],
    cflags: [
        "-fno-short-enums",
        "-D_ANDROID_",
    ] + GNSS_CFLAGS,

    ldflags: ["-Wl,--export-dynamic"],

    shared_libs: [
        "libutils",
        "libcutils",
        "liblog",
    ],
    header_libs: [
        "libutils_headers",
        "libloc_pla_headers",
        "liblocation_api_headers",
    ],
}

cc_library_headers {
    name: "libgps.utils_headers",
    vendor: true,
    export_include_dirs: ["."],
}
